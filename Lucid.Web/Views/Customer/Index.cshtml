@model IEnumerable<Lucid.Web.Models.Customer.CustomerListVm>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-12">
        <!-- /.card -->
        <div class="card">
            <!-- /.card-header -->
            <div class="card-body">
                <table id="listdatatbl" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.CustomerNo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Mobile)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Price)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.StockJar)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DueAmount)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LastSaleDate)
                            </th>

                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CustomerNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Mobile)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Price)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StockJar)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DueAmount)
                                </td>
                                <td>
                                    @(item.LastSaleDate.ToString("dd-MM-yyyy"))
                                </td>

                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->
