@model VanEditVm

@{
    ViewData["Title"] = "Edit";
    var existModel = TempData["existModel"];
}



<div class="row pt-4">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <div class="card card-info">
            @*<div class="card-header">
                    <h3 class="card-title">Horizontal Form</h3>
                </div>*@
            <!-- /.card-header -->
            <!-- form start -->
            <form class="form-horizontal" asp-action="Edit">
                <div class="card-body">
                    @if (existModel != null)
                    {
                        <h2 class="text-danger">@existModel</h2>
                    }
                    <div asp-validation-summary="ModelOnly" class="text-danger row"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group row">
                        <label asp-for="Name" class="col-sm-2 control-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Name" class="form-control" />
                        </div>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Driver" class="col-sm-2 control-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Driver" class="form-control" />
                        </div>
                        <span asp-validation-for="Driver" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Mobile" class="col-sm-2 control-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Mobile" class="form-control" />
                        </div>
                        <span asp-validation-for="Mobile" class="text-danger"></span>
                    </div>

                    <input type="hidden" asp-for="CreatedBy" />
                    <input type="hidden" asp-for="CreatedOn" />

                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                    <button type="submit" class="btn btn-info">Save</button>
                    <a class="btn btn-default float-right" asp-action="Index">Back</a>
                </div>
                <!-- /.card-footer -->
            </form>
        </div>
    </div>
</div>




@section Scripts{
    <partial name="_ValidationScriptsPartial">
}
